{
  "name": "micro-medium-api",
  "version": "1.2.1",
  "description": "Microservice for fetching the latest posts of Medium.",
  "license": "MIT",
  "repository": "evenchange4/micro-medium-api",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/evenchange4/micro-medium-api/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/micro-medium-api#readme",
  "bin": "bin/server.js",
  "files": [
    "src",
    "bin"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "micro src/index.js",
    "dev": "micro-dev src/index.js",
    "pkg": "pkg . --out-path pkg",
    "eslint": "eslint ./",
    "format": "prettier --trailing-comma all --single-quote --write '{src,bin}/**/*.js'",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch"
  },
  "now": {
    "alias": "micro-medium-api",
    "type": "npm",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/",
      "<rootDir>/pkg/"
    ]
  },
  "dependencies": {
    "axios": "^0.16.2",
    "micro": "^8.0.1",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.0.4",
    "microrouter": "^2.2.1",
    "query-string": "^5.0.0",
    "ramda": "^0.24.1",
    "update-notifier": "^2.2.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "await-url": "^0.3.0",
    "babel-eslint": "^7.2.3",
    "codecov": "^2.3.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-react-app": "^1.0.5",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "micro-dev": "^1.1.2",
    "now": "^7.3.0",
    "pkg": "^4.2.2",
    "prettier": "^1.5.3",
    "request-promise": "^4.2.1",
    "test-listen": "^1.0.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ]
    }
  }
}
